    "accounts": "npx hardhat accounts",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "node": "npx hardhat node",
    "deploy": "node scripts/deploy.js",
    "verify-RAT": "npx hardhat verify --network rinkeby <contract-address> '<wallet/treasury-address>'",
    "verify-Crowdsale": "npx hardhat verify --network rinkeby --constructor-args ./scripts/crowdsaleParameters.js <contract-address>",
    "verify-TokenTimeLock": "npx hardhat verify --network rinkeby --constructor-args ./scripts/timeLockParameters.js <contract-address>",
    "lint:ts": "eslint --max-warnings 0 .",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w"
  },
  "keywords": [
    "erc20",
    "rat"
  ],
  "author": "salmancodez@gmail.com",
